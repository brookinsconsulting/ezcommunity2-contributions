<form action="{www_dir}{index}/form/form/textedit/{form_id}/{page_id}/{element_id}" method="post">

<h1>{intl-text_block_values}</h1>

<hr noshade="noshade" size="4" />
<p class="boxtext">{intl-text_block}:</p>
<textarea name="TextBlock" rows="8" cols="40">{text_block}</textarea>
<br />
<br />

<hr noshade="noshade" size="4" />

<input class="okbutton" type="submit" name="OK" value="{intl-ok}" />&nbsp;
<input class="okbutton" type="submit" name="Back" value="{intl-back}" />

</form>
